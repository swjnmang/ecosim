rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isDeveloper() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'developer';
    }
    
    function isSchoolAdmin() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'school-admin';
    }
    
    function isTeacher() {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }
    
    function belongsToSameSchool(schoolId) {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.schoolId == schoolId;
    }

    // Users collection - role-based access
    match /users/{userId} {
      allow read: if isAuthenticated() && (
        request.auth.uid == userId  // Users can read their own data
        || isDeveloper()  // Developers can read all users
        || (isSchoolAdmin() && belongsToSameSchool(resource.data.schoolId))  // School admins can read their school's users
      );
      allow create: if isDeveloper() || isSchoolAdmin();  // Only developers and school admins can create users
      allow update: if isAuthenticated() && (
        request.auth.uid == userId  // Users can update their own data
        || isDeveloper()  // Developers can update all users
        || (isSchoolAdmin() && belongsToSameSchool(resource.data.schoolId))  // School admins can update their school's users
      );
      allow delete: if isDeveloper() || (isSchoolAdmin() && belongsToSameSchool(resource.data.schoolId));
    }

    // Schools collection
    match /schools/{schoolId} {
      allow read: if isAuthenticated() && (
        isDeveloper()
        || belongsToSameSchool(schoolId)
      );
      allow create: if isDeveloper();
      allow update: if isDeveloper() || (isSchoolAdmin() && belongsToSameSchool(schoolId));
      allow delete: if isDeveloper();
    }

    // Legacy teachers collection (for backwards compatibility)
    match /teachers/{teacherId} {
      allow read: if isAuthenticated() && request.auth.uid == teacherId;
      allow write: if isAuthenticated() && request.auth.uid == teacherId;
    }

    // Lobbies: Teachers can read/write their own
    match /lobbies/{lobbyId} {
      allow read: if isAuthenticated() && request.auth.uid == resource.data.teacherId
                  || request.auth == null; // Allow PIN lookup
      allow write: if isAuthenticated() && request.auth.uid == resource.data.teacherId;
      allow create: if isTeacher();
    }

    // Sessions: Authorized users can read their own
    match /sessions/{sessionId} {
      allow read: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/lobbies/$(request.resource.data.lobbyId)).data.teacherId
                  || request.auth == null; // Anonymous players
      allow create: if request.auth == null; // Sch√ºler create anonymous sessions
      allow write: if request.auth == null && request.resource.data.id == resource.data.id;
    }

    // Tasks: Linked to sessions/lobbies
    match /tasks/{taskId} {
      allow read: if request.auth == null
                  || request.auth.uid == get(/databases/$(database)/documents/lobbies/$(resource.data.lobbyId)).data.teacherId;
      allow create: if request.auth == null;
      allow write: if request.auth == null && request.resource.data.sessionId == resource.data.sessionId;
    }

    // ProgramState: Players can read/write their own
    match /programState/{stateId} {
      allow read, write: if request.auth == null && request.resource.data.sessionId == resource.data.sessionId
                         || request.auth != null;
    }

    // Templates: Read-only for all
    match /templates/{templateId} {
      allow read: if true;
    }

    // Reports: Only teachers for their lobbies
    match /reports/{reportId} {
      allow read: if request.auth != null && request.auth.uid == get(/databases/$(database)/documents/lobbies/$(resource.data.lobbyId)).data.teacherId;
    }
  }
}

